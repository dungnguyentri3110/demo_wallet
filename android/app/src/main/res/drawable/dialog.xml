<style android:name="dialog"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- title encapsulating main part (backgroud) of custom alertdialog -->
    <item
        android:name="android:windowFrame">@null</item>
    <!-- turn off any drawable used to draw a frame on the window -->
    <item
        android:name="android:windowBackground">@null</item>
    <!-- turn off any drawable used to draw a frame on the window -->
    <item
        android:name="android:windowIsFloating">true</item>
    <!-- float the window so it does not fill the screen -->
    <item
        android:name="android:windowNoTitle">true</item>
    <!-- remove the title bar we make our own-->
    <item
        android:name="android:windowContentOverlay">@null</item>
    <!-- remove the shadow from under the title bar -->
</style>